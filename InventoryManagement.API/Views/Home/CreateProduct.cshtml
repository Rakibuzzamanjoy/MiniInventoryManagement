@{
    ViewData["Title"]="Product Management";
}


<div ng-app="Prodapp" ng-controller="ProductManagementController">
    <div class="row">
        <div class="card">
            <div class="card-header">
                <h6>Add New Product</h6>
            </div>
            <div class="card-body">
                <form>
                    <div class="row mb-2">                        
                        <div class="col-sm-3">
                            <label for="name" class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="name" ng-model="Product.name" />
                        </div>
                        <div class="col-sm-3">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="description" ng-model="Product.description" />
                        </div>                        
                        
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" class="form-control" id="price" min="0" ng-model="Product.price" />
                        </div>
                        <div class="col-sm-3">
                            <label for="stock" class="form-label">Stock Quantity</label>
                            <input type="number" class="form-control" id="stock" min="0" ng-model="Product.stock" />
                        </div>                                    
                        
                    </div> 

                    <button type="button" class="btn btn-primary" ng-click="addProduct()">Save Product</button>
                </form>
            </div>
            <div class="card-footer">
                <a href="/Home/ProductManagement" class="btn btn-secondary mb-3">Back</a>
            </div>
        </div>        
    </div>
</div>


@{
    ViewData["Title"] = "Order Management";
}

<div ng-app="OrdApp" ng-controller="OrderManagementController">
    <div class="card col-3">
        <a href="/Home/CreateOrder" class="btn btn-primary">Create Order</a>
    </div>

    <br/>
    <div class="card">
        <div class="card-header">
            <h6>Order Management</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Order Id</th>
                        <th>Customer Name</th>
                        <th>Total Amount</th>
                        <th>OrderDate</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="order in OrderList">
                        <td>{{order.orderId}}</td>
                        <td>{{order.customerName}}</td>
                        <td>{{order.totalAmount | currency :'BDT '}}</td>
                        <td>{{order.orderDate | date :'yyyy-MM-dd hh:mm:ss a'}}</td>
                        <td>{{order.status}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
